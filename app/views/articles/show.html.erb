<div class="container article-section">
  <div class="article-title">
    <h1><%= @article.title %></h1>
  </div>
  <div class="article-body">
    <% paragraphs = @article.body.split(/\r/) %>
    <% paragraphs.each do |p| %>
      <p>
        <%= p %>
      </p>
    <% end %>
  </div>

  <div class="article-control-panel">
    <%= link_to 'Home', articles_path %>
    <% if session[:user_group] == 'admin' %>
      | <%= link_to 'Edit', edit_article_path %>
      | <%= link_to 'Delete', article_path, method: :delete %>
    <% end %>
  </div>
</div>
<div class="container comments-section">
  <%= render partial: "comments/comments" %>
  <%= render partial: "comments/new" %>
</div>
