<%= form_for @article do |f| %>
  <%= f.hidden_field :markdown %>
  <div class="form-group">
    <div class="input-group">
      <%= f.text_field :title, placeholder: "Title", class: "form-control" %></br>
      <span class="input-group-btn">
        <%= f.button id:"md-button", type: "button", class: @article.markdown ? "btn btn-success" : "btn btn-default" do %>
          Markdown
        <% end %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, {class: "form-control", id: "content-editor"} %></br>
  </div>

  <div class="form-group article-options">
    <label>Auto Tag:</label>
    <label class="radio-inline">
      <%= radio_button_tag :autotag, "true" %>
      On
    </label>
    <label class="radio-inline">
      <%= radio_button_tag :autotag, "false", :checked => "true"%>
      Off
    </label>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
<% end %>
