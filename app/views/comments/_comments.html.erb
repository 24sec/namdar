<div id="comment-list">
  <h3>Comments</h3>
  <% @article.comments.order(created_at: :desc).each do |c| %>
    <div class="panel panel-default">
      <div class="panel-heading comment-author">
        <h3 class="panel-title"><%= c.commenter %></h3>
      </div>
      <div class="panel-body comment-body">
        <%= c.comment_text %>
      </div>
    </div>
  <% end %>
</div>
