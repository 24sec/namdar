<div id="comment-list">
  <h3>Comments</h3>
  <% @article.comments.order(created_at: :desc).each do |c| %>
    <div class="panel panel-default">
      <div class="panel-heading comment-author">
        <%= c.commenter %>
      </div>
      <div class="panel-body comment-body">
        <%= c.comment_text %>

        <div class="text-right">
          <%= link_to 'Delete', article_path + '/comments/' + c.id.to_s, method: :delete %>
        </div>
      </div>
    </div>
  <% end %>
</div>
