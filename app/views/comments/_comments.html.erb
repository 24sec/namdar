<div id="comment-list">
  <h3>Comments</h3>
  <% @article.comments.order(created_at: :desc).each do |c| %>
    <div class="panel panel-default">
      <div class="panel-heading comment-author">
        <%= c.commenter %>
      </div>
      <div class="panel-body comment-body">
        <%= c.comment_text %>

        <% if session[:user_group] == 'admin' %>
          <div class="text-right">
            <%= link_to 'Delete', [c.article, c], method: :delete %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
